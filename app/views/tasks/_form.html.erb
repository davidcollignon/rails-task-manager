

<div class="container">
<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control'  %>
  </div>
  <% unless t.object.new_record? %>
    <div class="checkbox">
      <label>
      <%= t.check_box :completed %> Completed
      </label>
    </div>
  <% end %>
  <%= t.submit class: 'btn btn-primary' %>
<% end %>

</div>
